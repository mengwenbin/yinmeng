<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/snow"
    android:descendantFocusability="blocksDescendants" >
    
    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13.5dp"
        android:src="@drawable/headiv_bg" 
        android:id="@+id/head_bg"/>

    <com.xiaoxu.music.community.view.custom_shape_imageview.CircleImageView
        android:id="@+id/head_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/btn_attention"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/head_img"
        android:text="Godzilla"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/head_img"
        android:text="粉丝：26万"
        android:textColor="#979798"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fans"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/head_img"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="简介：这个主人有点懒"
        android:textColor="#959898"
        android:textSize="14sp" />

         <ImageView 
        android:id="@+id/btn_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>