<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout 
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:padding="5dp">
        
        <com.xiaoxu.music.community.view.custom_shape_imageview.RectangleImageView
	        android:id="@+id/left_image"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/test_default_wait_img"
	        android:scaleType="fitXY" />
        
        <TextView 
            android:id="@+id/left_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/left_image"
	        android:gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	         android:textStyle="normal"
	        android:textSize="18sp"
	        android:text=""/>
        
        <TextView
            android:id="@+id/left_blog_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/bg_circle_blog_num"
            android:text="123"
            android:textSize="13sp" />
        
        <TextView 
            android:id="@+id/left_reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_name"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:drawableLeft="@drawable/bg_circle_reply_num"
            android:text="456"
            android:textSize="13sp" />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:padding="5dp">
        
        <com.xiaoxu.music.community.view.custom_shape_imageview.RectangleImageView
	        android:id="@+id/right_image"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/test_default_wait_img"
	        android:scaleType="fitXY" />
        
       <TextView 
            android:id="@+id/right_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/right_image"
	        android:gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:textStyle="normal"
	        android:textSize="18sp"
	        android:text=""/>
        
        <TextView
            android:id="@+id/right_blog_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/bg_circle_blog_num"
            android:text="123"
            android:textSize="13sp" />
        
        <TextView 
            android:id="@+id/right_reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_name"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:drawableLeft="@drawable/bg_circle_reply_num"
            android:text="456"
            android:textSize="13sp" />
        
    </RelativeLayout>
    
    
</LinearLayout>