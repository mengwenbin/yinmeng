<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/item_bg" >

        <RelativeLayout
            android:id="@+id/rel_left"
            android:padding="1dp"
            android:paddingBottom="20dp"
            android:layout_width="170dp"
            android:layout_height="125dp" >

            <com.xiaoxu.music.community.view.custom_shape_imageview.RectangleImageView
                android:id="@+id/left_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="118dp"
                android:background="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:src="@drawable/nr_pauseicon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/left_video_name"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_left"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/cyan11"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/item_bg" >

        <RelativeLayout
            android:id="@+id/rel_right"
            android:padding="1dp"
            android:paddingBottom="20dp"
            android:layout_width="170dp"
            android:layout_height="125dp" >

            <com.xiaoxu.music.community.view.custom_shape_imageview.RectangleImageView
                android:id="@+id/right_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="118dp"
                android:background="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:src="@drawable/nr_pauseicon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/right_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_right"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/cyan11"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
