<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >
    
    <com.xiaoxu.music.community.view.custom_shape_imageview.RectangleImageView 
        android:id="@+id/sm_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/test_default_wait_img"/>
    
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/sm_img"
        android:layout_centerVertical="true">
        
        <TextView 
            android:id="@+id/sm_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:text="歌单"/>
        
        <TextView 
            android:id="@+id/sm_size"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/sm_name"
	        android:textColor="@color/music_list_song_author"
	        android:textSize="14sp"/>
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"/>
    
	
</RelativeLayout>
