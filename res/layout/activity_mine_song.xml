<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color" >

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:background="@color/white" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/test_default_head_bg_blue" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/song_details" />

        <RelativeLayout
            android:id="@+id/rel_icon"
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/person_time_bg" >

            <ImageView
                android:id="@+id/player_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:src="@drawable/player_icon" />

            <TextView
                android:id="@+id/person_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/player_iv"
                android:text="2345"
                android:textColor="@color/white"
                android:textSize="@dimen/mine_userinfo_item_text_size" />
        </RelativeLayout>
        <TextView
        android:id="@+id/song_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/rel_icon"
        android:text="古风-仙与侠"
        android:textColor="@color/black"
        android:textSize="@dimen/edituser_key_textsize" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/song_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/rel_icon" >

        <com.xiaoxu.music.community.view.custom_shape_imageview.CircleImageView
            android:id="@+id/author_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/test_default_head_bg_blue" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/author_head"
            android:text="godzilla"
            android:layout_marginLeft="5dp"
            android:textColor="@color/cyan8"
            android:textSize="@dimen/edituser_value_textsize" />
        <ImageView 
            android:layout_toRightOf="@id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/next_icon"/>
    </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"/>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/layout_indicate"
        android:layout_width="match_parent"
   		android:layout_height="50dp"
   		android:background="@color/white"
   		android:layout_below="@id/rel_title"
   		android:orientation="horizontal" >
   		
        <RelativeLayout
            android:id="@+id/layout_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/collect_iv"
                android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:layout_centerHorizontal="true"
            	android:src="@drawable/song_collect_normal"/>
            	
            <TextView
                android:layout_width="wrap_content"
              	android:layout_height="wrap_content"
              	android:layout_centerHorizontal="true"
              	android:layout_marginTop="32dp"
              	android:textSize="@dimen/mine_userinfo_item_text_size"
              	android:text="收藏"/>
                  	
            <View
               android:layout_width="1dp"
               android:layout_height="30dp"
               android:layout_centerVertical="true"
               android:background="@color/line_color"
               android:layout_alignParentRight="true"/>
             
         </RelativeLayout>
              
         <RelativeLayout
            android:id="@+id/layout_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:layout_centerHorizontal="true"
            	android:src="@drawable/song_share_normal"/>
            	
            <TextView
                android:layout_width="wrap_content"
              	android:layout_height="wrap_content"
              	android:layout_centerHorizontal="true"
              	android:layout_marginTop="32dp"
              	android:textSize="@dimen/mine_userinfo_item_text_size"
              	android:text="分享"/>
                  	
            <View
               android:layout_width="1dp"
               android:layout_height="30dp"
               android:layout_centerVertical="true"
               android:background="@color/line_color"
               android:layout_alignParentRight="true"/>
             
         </RelativeLayout>
              
         <RelativeLayout
            android:id="@+id/layout_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/down_iv"
                android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:layout_centerHorizontal="true"
            	android:src="@drawable/song_down_press"/>
            	
            <TextView
                android:layout_width="wrap_content"
              	android:layout_height="wrap_content"
              	android:layout_centerHorizontal="true"
              	android:layout_marginTop="32dp"
              	android:textSize="@dimen/mine_userinfo_item_text_size"
              	android:text="下载"/>
                  	
            <View
               android:layout_width="1dp"
               android:layout_height="30dp"
               android:layout_centerVertical="true"
               android:background="@color/line_color"
               android:layout_alignParentRight="true"/>
             
         </RelativeLayout>
         
         <RelativeLayout
            android:id="@+id/layout_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/edit_iv"
                android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:layout_centerHorizontal="true"
            	android:src="@drawable/song_edit_normal"/>
            	
            <TextView
                android:layout_width="wrap_content"
              	android:layout_height="wrap_content"
              	android:layout_centerHorizontal="true"
              	android:layout_marginTop="32dp"
              	android:textSize="@dimen/mine_userinfo_item_text_size"
              	android:text="编辑"/>
             
         </RelativeLayout>
              
   	</LinearLayout>
   	
    <com.xiaoxu.music.community.view.xlistview.XListView
        android:id="@+id/list_view"
        android:listSelector="@color/transparent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_indicate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"
		android:divider="@color/transparent"
        android:scrollbars="none" />

    <com.xiaoxu.music.community.view.RotateLoading
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:loading_width="5dp" />


</RelativeLayout>