                	android:background="@color/line_color"
                	android:layout_marginLeft="@dimen/edituser_line_margin_left"/>
	        		
	    	</RelativeLayout>
	    	
        	
        	<RelativeLayout
		        android:id="@+id/setting_layout_only_wifi"
