		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="@dimen/edituser_item_margin_top"
		            android:gravity="center"
		            android:text="@string/message_notification"/>
		        	
		        <ImageButton
	                android:id="@+id/btn_switch_push"
	                android:layout_width="50dp"
	                android:layout_height="30dp"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dp"
	                android:layout_centerVertical="true"
	                android:background="@drawable/btn_switch_on" />
	        		
	    	</RelativeLayout>
        	
        	<RelativeLayout
		        android:id="@+id/setting_layout_spitslot"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:background="@color/white"
		        android:layout_marginTop="@dimen/edituser_item_margin_top">
				
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="@dimen/edituser_item_margin_top"
		            android:gravity="center"
		            android:text="@string/spitslot_app" />
		        
		        <ImageButton
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="@dimen/edituser_btnRight_margin_right"
		            android:background="@drawable/btn_right_gray" />
	        		
	    	</RelativeLayout>
	    	
