		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="@dimen/edituser_item_margin_top"
		            android:gravity="center"
		            android:text="@string/only_wifi"/>
		        	
		        <ImageButton
	                android:id="@+id/btn_switch_wifi"
	                android:layout_width="50dp"
	                android:layout_height="30dp"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dp"
	                android:layout_centerVertical="true"
	                android:background="@drawable/btn_switch_off" />
		        
		         <View
                    android:layout_width="match_parent"
                	android:layout_height="1dp"
                	android:layout_alignParentBottom="true"
                	android:background="@color/line_color"
                	android:layout_marginLeft="@dimen/edituser_line_margin_left"/>
	        		
	    	</RelativeLayout>
	    	
        	<RelativeLayout
		        android:id="@+id/setting_layout_message_notification"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
