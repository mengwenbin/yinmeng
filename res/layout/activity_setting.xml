        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_title"
        android:background="@color/fm_mine_bg"
        android:scrollbars="none" >
        
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
