		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="@dimen/edituser_btnRight_margin_right"
		            android:background="@drawable/btn_right_gray" />
	        		
	    	</RelativeLayout>
	    	
        	<RelativeLayout
		        android:id="@+id/setting_layout_version_change"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:background="@color/white"
		        android:layout_marginTop="@dimen/edituser_item_margin_top">
				
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="@dimen/edituser_item_margin_top"
		            android:gravity="center"
		            android:text="@string/version_change" />
		        <!-- android:textColor="@color/act_set_text_color"
		        android:textSize="@dimen/edituser_key_textsize" -->
		        <ImageButton
		            android:id="@+id/image_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="@dimen/edituser_btnRight_margin_right"
		            android:background="@drawable/btn_right_gray" />
		        
		        <TextView
	                android:id="@+id/version_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_toLeftOf="@+id/new_tv"
	                android:layout_marginRight="8dp"
	                android:textColor="@color/act_set_text_color2"
	                android:textSize="@dimen/edituser_value_textsize"
	                android:text="2.1"/>
		        
		        <TextView
	                android:id="@+id/new_tv"
	                android:layout_width="25dp"
	                android:layout_height="16dp"
	                android:layout_toLeftOf="@id/image_btn"
	                android:background="@drawable/version_bg"
	                android:layout_marginRight="5dp"
	                android:layout_marginTop="7dp"
	                android:textColor="@color/white"
	                android:gravity="center"
	                android:textSize="10sp"
	                android:text="new"/>
	        		
	    	</RelativeLayout>
	    	
        	<RelativeLayout
		        android:id="@+id/setting_layout_clear_cache"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:background="@color/white"
		        android:layout_marginTop="@dimen/edituser_item_margin_top">
				
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="@dimen/edituser_item_margin_top"
		            android:gravity="center"
		            android:text="@string/clear_cache" />
		        
		        <ImageButton
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="@dimen/edituser_btnRight_margin_right"
		            android:background="@drawable/btn_right_gray" />
		        
		        <TextView
	                android:id="@+id/cache_size"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="@dimen/edituser_value_margin_right"
	                android:textColor="@color/act_set_text_color2"
	                android:textSize="@dimen/edituser_value_textsize"
	                android:text="0.0MB"/>
	        		
	    	</RelativeLayout>
        	
	    	
        	<RelativeLayout
		        android:id="@+id/setting_layout_exit"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:layout_marginTop="@dimen/edituser_item_margin_top"
		        android:layout_marginLeft="30dp"
		        android:layout_marginRight="30dp"
		        android:layout_marginBottom="20dp">
				
		        <Button
		            android:id="@+id/btn_exit"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_centerHorizontal="true"
		            android:paddingTop="10dp"
		            android:paddingBottom="10dp"
		            android:background="@drawable/bg_shape_exit_current_accounts"
		            android:gravity="center"
		            android:textColor="@color/white"
		            android:textSize="@dimen/edituser_key_textsize"
		            android:text="@string/exit_current_accounts" />
	        		
	    	</RelativeLayout>
		    
