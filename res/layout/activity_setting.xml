	    	</RelativeLayout> -->
        	
        	<RelativeLayout
		        android:id="@+id/setting_layout_about_app"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:background="@color/white">
		        <View
                    android:layout_width="match_parent"
                	android:layout_height="1dp"
                	android:layout_alignParentTop="true"
                	android:background="@color/line_color"
                	android:layout_marginLeft="@dimen/edituser_line_margin_left"/>
				
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="@dimen/edituser_item_margin_top"
		            android:gravity="center"
		            android:text="@string/about_app" />
		        
		        <ImageButton
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="@dimen/edituser_btnRight_margin_right"
		            android:background="@drawable/btn_right_gray" />
		        
		         <View
                    android:layout_width="match_parent"
                	android:layout_height="1dp"
                	android:layout_alignParentBottom="true"
                	android:background="@color/line_color"
                	android:layout_marginLeft="@dimen/edituser_line_margin_left"/>
	        		
	    	</RelativeLayout>
	    	
        	<RelativeLayout
		        android:id="@+id/setting_layout_attention_app"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:background="@color/white">
				
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
