        	<RelativeLayout
		        android:id="@+id/setting_layout_share_app"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/edituser_height_item"
		        android:background="@color/white">
				
		        <TextView
		            android:layout_width="wrap_content"
