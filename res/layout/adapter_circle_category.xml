<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_shape_edit_userinfo"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_convering" />
        
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_new_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/category_name"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/act_set_text_color2" />

        <TextView
            android:id="@+id/category_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_new_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/act_set_text_color2"/>

        

    </RelativeLayout>

</RelativeLayout>