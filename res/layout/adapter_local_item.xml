<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="70dp" >

    <ImageView
        android:id="@+id/music_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/test_default_wait_img"
        android:visibility="gone" />

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/music_image"
        android:singleLine="true"
        android:text="@string/music_name"
        android:textColor="@color/cyan8"
        android:textSize="@dimen/edituser_key_textsize" />

    <TextView
        android:id="@+id/singer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/music_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/music_writer"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/size"
        android:layout_below="@id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:textSize="10sp" />

</RelativeLayout>