<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">
    
    	<TextView 
    	    android:id="@+id/title"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:textColor="@color/tab_text_normal"
    	    android:textSize="16sp"
    	    android:layout_marginTop="5dp"
    	    android:text="@string/song_menu_new"/>
    	
    	<View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/title"
            android:background="@color/white"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/title"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_shape_xlistview_footerview"
            android:layout_centerHorizontal="true"
            android:hint="@string/song_menu_hint" >
        </EditText>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/edit_name"
            android:layout_marginTop="5dp">
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:layout_marginTop="10dp"/>
            
            <View 
                android:id="@+id/line"
                android:layout_width="1px"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
            
            <Button 
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/tab_text_normal"
                android:text="@string/song_menu_confirm"
                android:background="@drawable/bg_shape_button"
                android:layout_alignRight="@id/line"/>
            
            <Button 
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/tab_text_normal"
                android:background="@drawable/bg_shape_button"
                android:text="@string/song_menu_cancel"
                android:layout_alignLeft="@id/line"/>
            
        </RelativeLayout>
        
</RelativeLayout>
